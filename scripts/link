#!/bin/sh

# Absolute path to this script
SCRIPT=`readlink -f $0`
# Absolute path this script is in
SCRIPTPATH=`dirname $SCRIPT`

echo "Linking config files from $SCRIPTPATH"

link (){
    FROM="$SCRIPTPATH/../$1"
    TO=$2

    printf "ln -s %s %s\n" $FROM $TO

    rm $TO
    ln -s $FROM $TO
}

link zshrc ~/.zshrc
link oh-my-zsh ~/.oh-my-zsh
link scripts ~/.scripts
link screenrc ~/.screenrc
link byobu/bin ~/.byobu/bin
link byobu/keybindings ~/.byobu/keybindings
link byobu/windows.im ~/.byobu/windows.im
link byobu/windows.do ~/.byobu/windows.do
link byobu/windows.me ~/.byobu/windows.me
link byobu/windows.li ~/.byobu/windows.li
link byobu/windows.ex ~/.byobu/windows.ex
link gitconfig ~/.gitconfig
link muttrc ~/.muttrc
link mutt ~/.mutt
link vimrc ~/.vimrc
link vim ~/.vim
link tigrc ~/.tigrc
link irssi ~/.irssi
link moc ~/.moc
link rtorrent.rc ~/.rtorrent.rc
link terminator ~/.config/terminator
link xmodmaprc ~/.xmodmaprc
link awesome ~/.config/awesome
link Xdefaults ~/.Xdefaults
