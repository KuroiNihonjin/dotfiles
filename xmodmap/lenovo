! Make caps lock act as escape
keycode 66 = Escape

! Use super keys for ctrl action
clear Mod4
add Control = Super_L

! Use lenovo menu key for ctrl action
clear Mod3
add Control = Menu
keycode 135 = Control_R Control_R Control_R

