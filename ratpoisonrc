# Change prefix
escape C-z

# Disable startup message
startup_message off

# Use urxvt client instead of xterm
unbind c
bind c exec urxvtc

# Remap bannish to browser
unbind b
bind b exec chromium-browser

# Next window
definekey top M-l next

# Next screen
definekey top M-n nextscreen

# Music control
definekey top M-p exec ~/.scripts/music toggle
definekey top M-right exec ~/.scripts/music up
definekey top M-left exec ~/.scripts/music down

# ----------------------------------------------------------------
# Builtin bindings that I remove (makes the ? info window less cluttered)
# ------------------------------------------------------------------
unbind a # time
unbind b # bannish
unbind A # set window title
unbind i # info
unbind l # redisplay
unbind m # lastmessage
unbind n # next
unbind p # prev
unbind N # nextscreen
unbind P prevscreen
unbind Return # next
unbind space # next
unbind apostrophe # select
unbind v # version
unbind V # license
unbind w # windows
unbind C-underscore # undo (use u instead)
unbind 0 # select 0
unbind 1
unbind 2
unbind 3
unbind 4
unbind 5
unbind 6
unbind 7
unbind 8
unbind 9
unbind minus
