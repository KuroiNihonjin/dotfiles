# Change prefix
escape C-t

# Create second group
gnewbg second

# ----------------------------------------------------------------
# Builtin bindings that I remove (makes the ? info window less cluttered)
# ------------------------------------------------------------------
unbind C-t # other (use alt-space)
unbind a # time
unbind b # bannish
unbind c # console
unbind A # set window title
unbind i # info
unbind l # redisplay
unbind m # lastmessage
unbind n # next
unbind p # prev
unbind N # nextscreen
unbind P prevscreen
unbind Return # next
unbind space # next
unbind apostrophe # select
unbind v # version
unbind V # license
unbind w # windows
unbind C-underscore # undo (use u instead)
unbind 0 # select 0
unbind 1
unbind 2
unbind 3
unbind 4
unbind 5
unbind 6
unbind 7
unbind 8
unbind 9
unbind minus

# Disable startup message
startup_message off

# Use urxvt client instead of xterm
bind c exec urxvtc

# Remap bannish to browser
bind b exec firefox-beta-bin

# Switch group
bind C-t exec ratpoison -c "select -" -c "gnext" -c "next" 

# Move current window to default group
bind 1 gmove default
# Move current window to second group
bind 2 gmove second

definekey top C-equal exec /home/thib/.scripts/touchpad_toggle

# Next window
definekey top C-space next

# Next screen
definekey top F9 nextscreen

# Music control
definekey top M-t exec ~/.scripts/music toggle
definekey top M-equal exec ~/.scripts/music up
definekey top M-minus exec ~/.scripts/music down
definekey top M-m exec urxvtc -e ~/.scripts/music ui
