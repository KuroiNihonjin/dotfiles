# Change prefix
escape C-z

# Disable startup message
startup_message off

# Simulate middle click with keyboard
definekey top M-p ratclick 2

# Use urxvt client instead of xterm
unbind c
bind c exec urxvtc

# Remap bannish to browser
unbind b
bind b exec chromium-browser

# Next window
definekey top M-h next

# ----------------------------------------------------------------
# Builtin bindings that I remove (makes the ? info window less cluttered)
# ------------------------------------------------------------------
unbind a # time
unbind C-a
unbind b # bannish
unbind C-b
unbind A # set window title
unbind C-A
unbind i # info
unbind C-i
unbind l # redisplay
unbind C-l
unbind n # next
unbind C-n
unbind p # prev
unbind C-p
unbind Return # next
unbind C-Return
unbind space
unbind C-space # next
unbind v # version
unbind C-v
unbind V # license
unbind C-V
unbind C-underscore # undo (use u instead)
unbind 0 # select 0
unbind 1
unbind 2
unbind 3
unbind 4
unbind 5
unbind 6
unbind 7
unbind 8
unbind 9
unbind -
