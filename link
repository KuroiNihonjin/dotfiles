#!/usr/bin/env bash

link (){
if [ -e $1 ]; then
    if [ -e $2 ]; then
    rm $2
    fi

    ln -s $1 $2
fi
}

link ~/.dotfiles/.bashrc ~/.bashrc
link ~/.dotfiles/.config/terminator ~/.config/terminator
link ~/.dotfiles/.irssi ~/.irssi
link ~/.dotfiles/.git ~/.git
link ~/.dotfiles/bin ~/bin
link ~/.dotfiles/.screenrc ~/.screenrc
