" theme
"source /home/thib/.vimperator/color/desert_revisited.vimp

let mapleader = ","

" colemak
" =======================================
" next search -> down
nnoremap n 3j
vnoremap n j
" Faster viewport scrolling
nnoremap N 9j
vnoremap N 3j
" previous -> prev tab
nnoremap <C-n> gT
vnoremap <C-n> <nop>
inoremap <C-n> <esc>gT
" down -> next search
nnoremap j n
vnoremap j n
" join lines -> previous search
nnoremap J N
vnoremap J N

" end -> up
nnoremap e 3k
vnoremap e k
" Faster viewport scrolling
nnoremap E 9k
vnoremap E 3k
" end inclusive -> next tab
nnoremap <C-e> gt
vnoremap <C-e> <nop>
inoremap <C-e> <esc>gt

noremap h H
noremap l L

" mappings
" ======================================
" Select link
noremap s f
" Select link for new tab
noremap S F
" Disable original select link mapping
noremap f <nop>
" Disable original select link mapping for new tab
noremap F <nop>
" Move tabs
nnoremap <C-left> :tabmove! -1<CR>
nnoremap <C-right> :tabmove! +1<CR>

" options
" ======================================
" minimal gui
set gui=tabs
" Try to always switch to normal mode on page load
set focuscontent
" I don't like beeps
set visualbell
" useful for command-line completion
set autocomplete
set wildmode=list:longest,full
" text editor
set editor="urxvt -e vim -f"
set hintinputs="label,name"
set hintmatching="wordstartswith"
" default search engine
"set defsearch="duckduckgo"
set defsearch="google"

" custom stuff
" ======================================
noremap <leader>a :hipchatjumptoalert<CR><esc>
noremap <leader>t :hipchatjumptonext<CR><esc>
noremap <leader>s :hipchatjumptoprevious<CR><esc>

" autocommand
" ======================================
" automatic pass-through mode on certain pages (do ':h autocommands' for details)
"autocmd LocationChange .* :js modes.passAllKeys = /mail\.google\.com/.test(buffer.URL)
